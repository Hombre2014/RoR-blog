<div class="user">
  <img class="photo" src="<%= current_user.photo %>" alt="<%= current_user.name %>" width="180" height="auto">
  <div class="user-block">
    <h3><a class="user-link" href="/users/<%= current_user.id %>"><%= current_user.name %></a></h3>
    <h4>Number of posts: <%= current_user.posts_counter %></h4>
  </div>
</div>
