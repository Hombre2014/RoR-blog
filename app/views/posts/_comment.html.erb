<div class="comments-meta">
  <div class="author-comment">
    <h4 class="name"><%= comment.author.name %>: </h4>
    <div class="comt-del">
      <p class="comment-text"><%= comment.text %></p>
      <%= button_to 'Delete', user_post_comment_path(user_id: comment.author.id, post_id: comment.post.id, id: comment.id), method: :delete, class: 'button-del' if can? :destroy, comment %>
    </div>
  </div>
</div>
