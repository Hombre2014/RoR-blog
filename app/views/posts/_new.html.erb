<h2>New blog post</h2>
<%= form_with model: Post.new, url: '/posts/create', class: 'new-post-form' do |form| %>
  <%= form.hidden_field :author_id, value: current_user.id %>
  <%
=begin%>
 <div>
    <%= form.label :author %><br>
    <%= form.text_field :author %>
    <% @post.errors.full_messages_for(:author).each do |message| %>
      <div><%= message %></div>
    <% end %>
  </div> 
<%
=end%>

  <div>
    <%= form.label :title %><br>
    <%= form.text_field :title, placeholder: 'Title' %>
  </div>

  <div>
    <%= form.label :text %><br>
    <%= form.text_area :text, placeholder: 'Text' %>
    <%
=begin%>
 <% @post.errors.full_messages_for(:text).each do |message| %>
      <div><%= message %></div>
    <% end %> 
<%
=end%>
  </div>

  <div>
    <%= form.submit %>
  </div>
<% end %>
